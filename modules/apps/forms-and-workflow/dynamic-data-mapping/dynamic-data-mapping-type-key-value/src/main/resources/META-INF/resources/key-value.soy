{namespace DDMKeyValue}

/**
 * Defines the delegated template for the key/value field.
 */
{deltemplate ddm.field variant="'key_value'"}
	{call .render data="all" /}
{/deltemplate}

/**
 * Prints the DDM form key/value field.
 */
{template .render}

	{@param name: string}
	{@param placeholder: string}
	{@param showLabel: bool}
	{@param strings: [keyLabel: string]}
	{@param value: string}
	{@param visible: bool}
	{@param? dir: string}
	{@param? key: string}
	{@param? keyInputSize: int}
	{@param? label: string}
	{@param? required: bool}
	{@param? tooltip: string}

	<div class="form-group{$visible ? '' : ' hide'} liferay-ddm-form-field-key-value liferay-ddm-form-field-text" data-fieldname="{$name}">
		{if $showLabel}
			<label class="control-label" for="{$name}">
				{$label}

				{if $required}
					<span class="icon-asterisk text-warning"></span>
				{/if}
			</label>
		{/if}

		<div class="input-group input-group-container {if $tooltip}input-group-transparent{/if}">
			<div class="input-group-item">
			<input
				class="field form-control"
				{if $dir}dir="{$dir}"{/if}
				id="{$name}"
				name="{$name}"
				placeholder="{$placeholder}"
				type="text"
				value="{$value}"
			/>
			</div>

			{if $tooltip}
			<div class="input-group-item input-group-item-shrink">
				<button class="btn btn-monospaced btn-unstyled" type="button">
					<a class="help-icon rounded-circle sticker sticker-secondary"
					data-original-title="{$tooltip}"
					data-toggle="popover"
					href="javascript:;"
					title="{$tooltip}">
					<span class="icon-question"></span>
				</a>
				</button>
			</div>
			{/if}
		</div>

		<div class="active key-value-editor">
			<label class="control-label key-value-label">{$strings.keyLabel}:</label>
			<input
				class="key-value-input"
				size="{$keyInputSize}"
				tabindex="-1"
				type="text"
				value="{$key}"
			/>
		</div>
	</div>
{/template}